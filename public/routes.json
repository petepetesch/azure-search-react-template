{
    "routes": [
      {
        "route": "/logout",
        "serve": "/.auth/logout"
      },
      {
        "route": "/login",
        "serve": "/.auth/login/aad"
      },
      {
        "route": "/.auth/login/github",
        "statusCode": "404"
      },
       {
        "route": "/home",
        "serve": "/",
        "statusCode": 301,
        "allowedRoles": ["authenticated"]
      },
      { 
        "route": "/search" ,
        "allowedRoles": ["authenticated"]
      },
      { 
        "route": "/api/search" ,
        "allowedRoles": ["authenticated"]
      },
      { 
        "route": "/api/lookup" 
      },
      { 
        "route": "/api/suggest" 
      },
      { 
        "route": "/details/*" ,
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/*",
        "serve": "/",
        "statusCode": 200
      }
    ],
    "platformErrorOverrides": [
      {
        "errorType": "Unauthenticated",
        "serve": "/login"
      },
      {
        "errorType": "NotFound",
        "serve": "/index.html",
        "statusCode": 200
      }
    ]
  }