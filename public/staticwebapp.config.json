{
    "routes": [
      {
        "route": "/logout",
        "rewrite": "/.auth/logout"
      },
      {
        "route": "/login",
        "rewrite": "/.auth/login/aad"
      },
      {
        "route": "/.auth/login/github",
        "rewrite": "404"
      },
       {
        "route": "/home",
        "allowedRoles": ["anonymous"]
      },
      { 
        "route": "/search" ,
        "allowedRoles": ["anonymous"]
      },
      { 
        "route": "/api/search" ,
        "allowedRoles": ["anonymous"]
      },
      { 
        "route": "/api/lookup" ,
        "allowedRoles": ["authenticated"]
      },
      { 
        "route": "/api/suggest" ,
        "allowedRoles": ["authenticated"]
      },
      { 
        "route": "/details/*" ,
        "allowedRoles": ["authenticated"]
      },
      {
        "route": "/*",
        "allowedRoles": ["authenticated"]
      }
    ],
    "responseOverrides": { 
      "400": {
      "rewrite": "/invalid-invitation-error.html"
    },
    "401": {
      "redirect": "/login",
      "statusCode": 302
    },
    "403": {
      "rewrite": "/custom-forbidden-page.html"
    },
    "404": {
      "rewrite": "/404.html"
    }
  }
  }